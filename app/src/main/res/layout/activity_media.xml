<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33ffff00"
            android:text="原始路径："
            android:textColor="#ff0000" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_media_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#33ffff00"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33ffff00"
            android:text="原始时长："
            android:textColor="#ff0000" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_media_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33ffff00"
            android:text="秒"
            android:textColor="#ff0000" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/ll_combine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33ffff00"
            android:text="合成路径："
            android:textColor="#ff0000" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_combine_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#33ffff00"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33ffff00"
            android:text="合成时长："
            android:textColor="#ff0000" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_combine_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33ffff00"
            android:text="秒"
            android:textColor="#ff0000" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_merge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="原音合成"
        android:textColor="#ffffff" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_dubbing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="配音合成"
        android:textColor="#ffffff" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_dubbing_all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="配音合成(全部)"
        android:textColor="#ffffff" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="播放"
        android:textColor="#ffffff" />

</LinearLayout>